{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<h1>Liste des produits</h1>
	<h2>Trier par :</h2>

{% include  'content/filter/products_seller.html.twig' %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>Produits</h1>
			
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nom</th>
							<th>Prix</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for product in products %}
							<tr>
								<td>{{ product.description }}</td>
								<td>{{ product.title }}</td>
								<td>{{ product.price }}</td>
								
							</tr>
						{% endfor %}
					</tbody>
				</table>
		</div>

	</div>
{% endblock %}
    